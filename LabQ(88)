#include <stdio.h>

int main()
{
    
    double a,b,c,avg;
    printf("average of 3 numbers \n");
    printf("enter number \n");
    scanf("%lf",&a);
    printf("enter number \n");
    scanf("%lf",&b);
    printf("enter number \n");
    scanf("%lf",&c);
    avg=(a+b+c)/3;
    printf("average is %f",avg);

    return 0;
}

